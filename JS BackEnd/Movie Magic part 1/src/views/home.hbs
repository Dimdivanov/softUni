<body>
  <div id='box'>
    <main>
      <section id='catalog'>
        <h1>All Movies</h1>
        <div class='band'>
          <!-- If there are posts for creature in the database display each of them -->
          {{#if movies}}
            {{#each movies}}
              <div class='flip flip-vertical'>
                <div class='front'>
                  <img src={{imageUrl}} alt={{title}} />
                </div>
                <div class='back'>
                  <h1>{{title}}</h1>
                  <h2>Genre: {{genre}}</h2>
                  <p>
                    {{description}}
                  </p>
                  <a href='/details/{{id}}' class='details'>Details</a>
                </div>
              </div>
            {{/each}}
            <!-- If there are still no posts in the database display: -->
          {{else}}
            <div class='no-posts'>
              <p class='no-offer'>There are no posts yet...</p>
            </div>
          {{/if}}
        </div>
      </section>
    </main>
  </div>
</body>