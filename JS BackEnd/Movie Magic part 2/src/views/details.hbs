<body>
  <div id="box">
    <main>
          <section id="details-page">
                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>{{movie.title}}</h1>
                            <div class="card-movie">
                                <div class="first-info">
                                    <p class="card-genre">Genre: {{movie.genre}}</p>
                                    <p class="card-director">Directror: {{movie.director}}</p>
                                </div>
                                <div class="second-info">
                                    <p class="card-year">Year: {{movie.date}}</p>
                                    <p class="card-ranking">Rating: {{movie.rating}}<span id="stars">&#x2605; &#x2605; &#x2605;
                                            &#x2605;</span></p>
                                </div>

                            </div>

                            <p class="disc">{{movie.description}}</p>
                        </div>
                    </div>
                    <div class="card_right">
                        <img src={{movie.image}} alt="image">
                    </div>
                </div>

                <div class="main-cast-card">
                    <div class="cast-card">
                        <div class="card-img">
                            <img src={{castData.castImage}}
                                alt="cast">
                        </div>
                        <div class="cast-info">
                            <h1>{{castData.name}}</h1>
                            <h3>Age: {{castData.age}}</h3>
                            <h3>Born: {{castData.born}}</h3>
                            <h3>Name in Movie: {{castData.nameInMovie}}</h3>
                        </div>
                    </div>
                </div>
                </div>
          </section>
    </main>
  </div>
</body>

