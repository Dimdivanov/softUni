<body>

  <div id='box'>

    <main>

      <section id='details-page'>

        {{#with movie}}
          <div class='main_card'>
            <div class='card_left'>
              <div class='card_datails'>
                <h1>{{title}}</h1>
                <div class='card-movie'>
                  <div class='first-info'>
                    <p class='card-genre'>Genre: {{genre}}</p>
                    <p class='card-director'>Directror: {{director}}</p>
                  </div>
                  <div class='second-info'>
                    <p class='card-year'>Year: {{date}}</p>
                    <p class='card-ranking'>Rating:
                      {{rating}}<span id='stars'> &#x2605; &#x2605; &#x2605; &#x2605;</span></p>
                  </div>

                </div>

                <p class='disc'>Description: {{description}}</p>
              </div>
            </div>
            <div class='card_right'>
              <img src={{image}} alt='image' />
            </div>

          </div>
        {{/with}}
      </section>

    </main>

  </div>

</body>